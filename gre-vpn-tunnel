config t
router ospf 101
network 192.168.0.0 0.0.0.255 area 0
network 192.168.1.0 0.0.0.255 area 0
network 172.16.1.0 0.0.0.3 area 0
exit
interface Tunnel102
tunnel path-mtu-discovery
ip ospf mtu-ignore
end
####################################

####################################
config t
ip access-list extended IPSEC-TRAFFIC
remark VPN traffic
permit gre host 10.82.183.28 host 52.7.168.8
exit
crypto map TUNNEL-MAP 10 ipsec-isakmp
set peer 52.7.168.8
set transform-set AUTH-IPSEC-TRANSFORM
match address IPSEC-TRAFFIC
exit
interface gigabitEthernet 1
crypto map TUNNEL-MAP
exit
interface Tunnel102
crypto map TUNNEL-MAP
exit
##########################################

